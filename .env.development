# Development Environment Configuration
NODE_ENV="development"

# Server Ports - Development Range (3000-3099, 5100-5199)
PORT=3001
FRONTEND_PORT=5178

# Database
DATABASE_URL="postgresql://mes_user:mes_password@localhost:5432/mes_dev_db?schema=public"

# Application URLs
FRONTEND_URL="http://local.mes.com"
BACKEND_URL="http://localhost:3001"
DOMAIN="local.mes.com"

# JWT Configuration
JWT_SECRET="dev-super-secret-jwt-key-that-is-at-least-32-characters-long-change-in-production"
JWT_EXPIRE="24h"
JWT_REFRESH_EXPIRE="7d"

# Redis Configuration (for session storage and caching)
REDIS_URL="redis://localhost:6379"
REDIS_DB="0"

# Kafka Configuration (for event streaming)
KAFKA_BROKERS="localhost:9092"

# Email Configuration (for NCR workflow notifications and approvals)
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@machshop.local"

# File Upload Configuration
UPLOAD_MAX_SIZE="10MB"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET="your-super-secret-session-key-change-in-production"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS="http://local.mes.com,http://localhost:5178,http://localhost:3001"

# Development-specific settings
HOT_RELOAD=true
DEBUG_MODE=true

# Database Connection Pool Settings
DB_CONNECTION_LIMIT=50
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_CONNECTION_TIMEOUT=30000

# Audit System Configuration
AUDIT_LOG_RETENTION_DAYS=30
AUDIT_BATCH_SIZE=100
AUDIT_CACHE_TTL=3600
AUDIT_PERFORMANCE_THRESHOLD_MS=50
AUDIT_ENABLE_SECURITY_MONITORING=true
AUDIT_ENABLE_PERFORMANCE_MONITORING=true