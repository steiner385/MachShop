  causeCode    CauseCode  @relation(fields: [causeCodeId], references: [id], onDelete: Cascade)

  // Change tracking
  changeType   String   // "CREATED", "UPDATED", "ENABLED", "DISABLED", "HIERARCHY_CHANGED"
