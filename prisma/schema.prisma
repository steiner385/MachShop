  unitOfMeasureRef UnitOfMeasure?     @relation("MaterialStateHistoryUOM", fields: [unitOfMeasureId], references: [id])

  @@index([lotId])
  @@index([changedAt])
  @@index([newState])
  @@index([unitOfMeasureId])
  @@index([newStatus])
  @@map("material_state_history")
