{
  "id": "work-order-validation-hook",
  "version": "2.0.1",
  "name": "Work Order Validation Hook",
  "type": "business-logic",
  "category": "workflow-hook",
  "description": "Comprehensive validation hook for work orders enforcing business rules including resource availability, material allocation, and schedule feasibility before order release.",
  "apiVersion": "v2.1",
  "mesVersion": "3.2.0",
  "extensionSchemaVersion": "2.0",
  "foundationTier": "foundation",
  "author": {
    "name": "MachShop Manufacturing Systems",
    "email": "hooks@machshop.io"
  },
  "license": "Apache-2.0",
  "repository": "https://github.com/machshop/work-order-validation",
  "keywords": ["validation", "work-order", "business-rules", "hook", "manufacturing"],
  "tags": ["validation", "business-logic", "hooks", "work-orders"],
  "documentation": {
    "guide": "https://docs.machshop.io/hooks/work-order-validation",
    "api": "https://docs.machshop.io/hooks/work-order-validation/api"
  },
  "dependencies": {
    "capabilities": [
      {
        "capability": "work-order-data",
        "minVersion": "v2"
      },
      {
        "capability": "material-availability",
        "minVersion": "v1"
      }
    ]
  },
  "capabilities": {
    "provides": [
      {
        "name": "work-order-validation",
        "version": "v2.0.0",
        "implements": ["validate", "checkMaterials", "checkEquipment", "checkSchedule"]
      }
    ],
    "hooks": [
      {
        "hook": "work-order:before-release",
        "phase": "pre",
        "priority": 100,
        "description": "Validates work order before release",
        "contract": "WorkOrderHookContract"
      },
      {
        "hook": "work-order:after-update",
        "phase": "post",
        "priority": 50,
        "description": "Updates validation state after work order changes",
        "contract": "WorkOrderHookContract"
      }
    ]
  },
  "permissions": [
    "read:work-orders",
    "read:materials",
    "read:equipment",
    "read:routing"
  ],
  "configuration": {
    "properties": {
      "strictMode": {
        "type": "boolean",
        "description": "Enable strict validation (fail on warning)",
        "default": false
      },
      "materialCheckEnabled": {
        "type": "boolean",
        "description": "Check material availability",
        "default": true
      },
      "equipmentCheckEnabled": {
        "type": "boolean",
        "description": "Check equipment availability",
        "default": true
      },
      "scheduleCheckEnabled": {
        "type": "boolean",
        "description": "Check schedule feasibility",
        "default": true
      }
    }
  },
  "entryPoint": {
    "main": "dist/index.js",
    "module": "dist/index.mjs"
  },
  "requirements": {
    "nodeVersion": ">=16.0.0",
    "memory": "512MB"
  },
  "testing": {
    "hasTests": true,
    "coverage": 92,
    "testTypes": ["unit", "integration", "e2e"],
    "cicdIntegration": true,
    "performanceBaseline": {
      "responseTimeMs": 200
    }
  },
  "security": {
    "sandboxed": true,
    "signatureRequired": true,
    "securityLevel": "foundation",
    "vulnerabilityScanRequired": true,
    "auditLog": true
  },
  "governance": {
    "requiresPlatformApproval": true,
    "approvalProcess": "standard"
  },
  "performance": {
    "asyncCapable": true
  },
  "releaseDate": "2024-02-20T14:15:00Z"
}
