{
  "id": "sap-erp-adapter",
  "version": "3.1.0",
  "name": "SAP ERP Integration Adapter",
  "type": "integration",
  "category": "erp-adapter",
  "description": "Bi-directional integration adapter connecting MachShop manufacturing execution system with SAP ERP for real-time order synchronization, inventory updates, and production reporting.",
  "apiVersion": "v2.1",
  "mesVersion": "3.2.0",
  "extensionSchemaVersion": "2.0",
  "foundationTier": "foundation",
  "author": {
    "name": "SAP Integration Specialists",
    "email": "sap-integration@machshop.io"
  },
  "license": "Apache-2.0",
  "repository": "https://github.com/machshop/sap-erp-adapter",
  "homepage": "https://docs.machshop.io/adapters/sap",
  "keywords": ["sap", "erp", "integration", "adapter", "synchronization", "integration"],
  "tags": ["sap", "erp", "integration", "synchronization", "manufacturing"],
  "documentation": {
    "guide": "https://docs.machshop.io/adapters/sap/setup-guide",
    "api": "https://docs.machshop.io/adapters/sap/api-reference",
    "changelog": "https://github.com/machshop/sap-erp-adapter/blob/main/CHANGELOG.md"
  },
  "dependencies": {
    "capabilities": [
      {
        "capability": "erp-connector",
        "minVersion": "v2"
      },
      {
        "capability": "work-order-data",
        "minVersion": "v2"
      }
    ]
  },
  "capabilities": {
    "provides": [
      {
        "name": "sap-erp-integration",
        "version": "v3.1.0",
        "implements": ["sync", "query", "transform", "mapData"]
      }
    ],
    "integrations": [
      {
        "system": "SAP ERP",
        "version": "S/4HANA 2023+",
        "description": "SAP ERP bidirectional integration",
        "contract": "SAPIntegrationContract"
      }
    ]
  },
  "permissions": [
    "read:work-orders",
    "write:work-orders",
    "read:materials",
    "write:materials",
    "integration:external-systems"
  ],
  "configuration": {
    "properties": {
      "sapInstance": {
        "type": "string",
        "description": "SAP system instance URL"
      },
      "sapUsername": {
        "type": "string",
        "description": "SAP authentication username"
      },
      "sapPassword": {
        "type": "string",
        "description": "SAP authentication password"
      },
      "syncInterval": {
        "type": "integer",
        "description": "Synchronization interval in seconds",
        "default": 60,
        "minimum": 10,
        "maximum": 3600
      },
      "bidirectionalSync": {
        "type": "boolean",
        "description": "Enable bidirectional synchronization",
        "default": true
      }
    },
    "required": ["sapInstance", "sapUsername", "sapPassword"]
  },
  "entryPoint": {
    "main": "dist/index.js",
    "module": "dist/index.mjs"
  },
  "requirements": {
    "nodeVersion": ">=16.0.0",
    "memory": "1GB"
  },
  "testing": {
    "hasTests": true,
    "coverage": 79,
    "testTypes": ["unit", "integration", "e2e"],
    "cicdIntegration": true,
    "performanceBaseline": {
      "memoryUsageMB": 512,
      "responseTimeMs": 1000
    }
  },
  "security": {
    "sandboxed": true,
    "signatureRequired": true,
    "allowedOrigins": ["https://sap-instance.company.com"],
    "securityLevel": "foundation",
    "vulnerabilityScanRequired": true,
    "auditLog": true,
    "dataEncryption": {
      "atRest": true,
      "inTransit": true
    }
  },
  "governance": {
    "requiresPlatformApproval": true,
    "approvalProcess": "standard"
  },
  "performance": {
    "asyncCapable": true,
    "bundleSize": "350KB"
  },
  "releaseDate": "2024-01-10T08:45:00Z"
}
