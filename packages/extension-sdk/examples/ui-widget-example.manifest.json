{
  "id": "quality-dashboard-widget",
  "version": "2.0.0",
  "name": "Quality Dashboard Widget",
  "type": "ui-extension",
  "category": "dashboard-widget",
  "description": "Real-time quality metrics dashboard widget displaying defect rates, control limits, and trend analysis for manufacturing operations.",
  "apiVersion": "v2.1",
  "mesVersion": "3.2.0",
  "extensionSchemaVersion": "2.0",
  "foundationTier": "application",
  "author": {
    "name": "MachShop Engineering",
    "email": "support@machshop.io",
    "url": "https://machshop.io"
  },
  "license": "MIT",
  "repository": "https://github.com/machshop/quality-dashboard-widget",
  "homepage": "https://docs.machshop.io/extensions/quality-dashboard",
  "keywords": ["quality", "dashboard", "metrics", "widget", "monitoring"],
  "tags": ["quality", "monitoring", "real-time", "manufacturing"],
  "documentation": {
    "guide": "https://docs.machshop.io/extensions/quality-dashboard/guide",
    "api": "https://docs.machshop.io/extensions/quality-dashboard/api",
    "changelog": "https://github.com/machshop/quality-dashboard-widget/blob/main/CHANGELOG.md",
    "support": "https://github.com/machshop/quality-dashboard-widget/issues"
  },
  "dependencies": {
    "capabilities": [
      {
        "capability": "quality-data-provider",
        "minVersion": "v2",
        "provider": "core-mes-ui-foundation"
      }
    ]
  },
  "conflicts": {
    "explicit": [
      {
        "id": "legacy-quality-widget",
        "reason": "Incompatible data structure and UI framework"
      }
    ]
  },
  "capabilities": {
    "provides": [
      {
        "name": "quality-dashboard",
        "version": "v2.0.0",
        "implements": ["render", "configure", "refresh"]
      }
    ],
    "ui": {
      "widgets": [
        {
          "id": "quality-metrics-dashboard",
          "name": "Quality Metrics Dashboard",
          "category": "dashboard-widget",
          "slots": ["dashboard-right-panel", "quality-hub"],
          "permissions": ["read:quality", "read:work-orders"],
          "contract": "UIComponentContract"
        }
      ]
    }
  },
  "permissions": [
    "read:quality",
    "read:work-orders"
  ],
  "configuration": {
    "properties": {
      "refreshInterval": {
        "type": "integer",
        "description": "Data refresh interval in seconds",
        "default": 30,
        "minimum": 5,
        "maximum": 300
      },
      "chartHeight": {
        "type": "integer",
        "description": "Dashboard chart height in pixels",
        "default": 400,
        "minimum": 200,
        "maximum": 800
      },
      "displayMode": {
        "type": "string",
        "enum": ["compact", "expanded"],
        "default": "expanded",
        "description": "Display layout mode for widgets"
      }
    },
    "required": ["refreshInterval"]
  },
  "entryPoint": {
    "module": "dist/index.mjs",
    "browser": "dist/index.umd.js"
  },
  "requirements": {
    "nodeVersion": ">=16.0.0",
    "memory": "256MB"
  },
  "testing": {
    "hasTests": true,
    "coverage": 85,
    "testTypes": ["unit", "integration", "component"],
    "cicdIntegration": true,
    "performanceBaseline": {
      "memoryUsageMB": 128,
      "responseTimeMs": 500
    }
  },
  "security": {
    "sandboxed": true,
    "signatureRequired": false,
    "allowedOrigins": ["https://machshop.io"],
    "securityLevel": "standard",
    "vulnerabilityScanRequired": false,
    "auditLog": false
  },
  "governance": {
    "requiresPlatformApproval": false,
    "approvalProcess": "standard"
  },
  "performance": {
    "lazyLoad": true,
    "bundleSize": "150KB",
    "asyncCapable": true
  },
  "releaseDate": "2024-01-15T10:30:00Z",
  "deprecated": false
}
