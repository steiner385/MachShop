{
  "id": "azure-ad-auth-provider",
  "version": "2.0.0",
  "name": "Azure Active Directory Authentication Provider",
  "type": "infrastructure",
  "category": "custom-auth",
  "description": "Enterprise authentication provider integrating Microsoft Azure Active Directory for single sign-on, role mapping, and multi-tenant organization support.",
  "apiVersion": "v2.1",
  "mesVersion": "3.2.0",
  "extensionSchemaVersion": "2.0",
  "foundationTier": "foundation",
  "author": {
    "name": "MachShop Enterprise",
    "email": "enterprise@machshop.io"
  },
  "license": "MIT",
  "repository": "https://github.com/machshop/azure-ad-auth",
  "keywords": ["azure", "authentication", "sso", "enterprise", "identity", "infrastructure"],
  "tags": ["azure", "authentication", "sso", "identity", "enterprise"],
  "documentation": {
    "guide": "https://docs.machshop.io/auth/azure-ad",
    "api": "https://docs.machshop.io/auth/azure-ad/api"
  },
  "dependencies": {
    "capabilities": [
      {
        "capability": "authentication-provider",
        "minVersion": "v2"
      }
    ]
  },
  "capabilities": {
    "provides": [
      {
        "name": "azure-ad-authentication",
        "version": "v2.0.0",
        "implements": ["authenticate", "authorize", "refreshToken", "mapRoles"]
      }
    ],
    "hooks": [
      {
        "hook": "auth:authenticate",
        "phase": "core",
        "priority": 500,
        "description": "Authenticate user with Azure AD",
        "contract": "AuthenticationHookContract"
      },
      {
        "hook": "auth:authorize",
        "phase": "core",
        "priority": 450,
        "description": "Authorize user access based on Azure AD roles",
        "contract": "AuthorizationHookContract"
      }
    ]
  },
  "permissions": [
    "read:users",
    "write:users",
    "admin:security"
  ],
  "configuration": {
    "properties": {
      "tenantId": {
        "type": "string",
        "description": "Azure AD tenant ID",
        "format": "uuid"
      },
      "clientId": {
        "type": "string",
        "description": "Azure AD application client ID",
        "format": "uuid"
      },
      "clientSecret": {
        "type": "string",
        "description": "Azure AD application client secret"
      },
      "scopes": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "OAuth scopes to request",
        "default": ["User.Read"]
      },
      "roleMapping": {
        "type": "object",
        "description": "Azure AD groups to MachShop roles mapping"
      }
    },
    "required": ["tenantId", "clientId", "clientSecret"]
  },
  "entryPoint": {
    "main": "dist/index.js",
    "module": "dist/index.mjs"
  },
  "requirements": {
    "nodeVersion": ">=16.0.0",
    "memory": "256MB"
  },
  "testing": {
    "hasTests": true,
    "coverage": 87,
    "testTypes": ["unit", "integration", "security"],
    "cicdIntegration": true,
    "performanceBaseline": {
      "responseTimeMs": 100
    }
  },
  "security": {
    "sandboxed": false,
    "signatureRequired": true,
    "securityLevel": "foundation",
    "vulnerabilityScanRequired": true,
    "auditLog": true,
    "dataEncryption": {
      "atRest": true,
      "inTransit": true
    }
  },
  "governance": {
    "requiresPlatformApproval": true,
    "approvalProcess": "security-review"
  },
  "performance": {
    "asyncCapable": true,
    "bundleSize": "200KB"
  },
  "releaseDate": "2024-01-05T11:20:00Z"
}
