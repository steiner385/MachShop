{
  "id": "azure-ad-auth-provider",
  "version": "1.3.0",
  "name": "Azure Active Directory Authentication Provider",
  "type": "infrastructure",
  "category": "custom-auth",
  "description": "Enterprise authentication provider integrating Microsoft Azure Active Directory for single sign-on, role mapping, and multi-tenant organization support.",
  "author": {
    "name": "MachShop Enterprise",
    "email": "enterprise@machshop.io"
  },
  "license": "MIT",
  "repository": "https://github.com/machshop/azure-ad-auth",
  "apiVersion": "v2.1",
  "mesVersion": "3.2.0",
  "extensionSchemaVersion": "1.0",
  "keywords": ["azure", "authentication", "sso", "enterprise", "identity"],
  "documentation": {
    "guide": "https://docs.machshop.io/auth/azure-ad",
    "api": "https://docs.machshop.io/auth/azure-ad/api"
  },
  "dependencies": {
    "@azure/msal-node": "^1.17.0",
    "jsonwebtoken": "^9.0.0"
  },
  "capabilities": {
    "hooks": [
      {
        "hook": "auth:authenticate",
        "phase": "core",
        "priority": 500
      },
      {
        "hook": "auth:authorize",
        "phase": "core",
        "priority": 450
      }
    ]
  },
  "permissions": [
    "read:users",
    "write:users",
    "admin:security"
  ],
  "configuration": {
    "properties": {
      "tenantId": {
        "type": "string",
        "description": "Azure AD tenant ID",
        "format": "uuid"
      },
      "clientId": {
        "type": "string",
        "description": "Azure AD application client ID",
        "format": "uuid"
      },
      "clientSecret": {
        "type": "string",
        "description": "Azure AD application client secret"
      },
      "scopes": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "OAuth scopes to request",
        "default": ["User.Read"]
      },
      "roleMapping": {
        "type": "object",
        "description": "Azure AD groups to MachShop roles mapping"
      }
    },
    "required": ["tenantId", "clientId", "clientSecret"]
  },
  "entryPoint": {
    "main": "dist/index.js",
    "module": "dist/index.mjs"
  },
  "requirements": {
    "nodeVersion": ">=16.0.0",
    "memory": "256MB"
  },
  "testing": {
    "hasTests": true,
    "coverage": 87
  },
  "security": {
    "sandboxed": false,
    "signatureRequired": true
  },
  "performance": {
    "asyncCapable": true,
    "bundleSize": "200KB"
  },
  "tags": ["azure", "authentication", "sso", "identity", "enterprise"],
  "releaseDate": "2024-01-05T11:20:00Z"
}
