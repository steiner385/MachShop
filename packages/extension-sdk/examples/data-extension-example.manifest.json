{
  "id": "aerospace-custom-fields",
  "version": "2.0.0",
  "name": "Aerospace Industry Custom Fields",
  "type": "data-extension",
  "category": "custom-field",
  "description": "Extends work order and quality modules with aerospace-specific custom fields including certification tracking, compliance documentation, and supplier AS9100 status.",
  "apiVersion": "v2.1",
  "mesVersion": "3.2.0",
  "extensionSchemaVersion": "2.0",
  "foundationTier": "application",
  "author": {
    "name": "Aerospace Compliance Systems",
    "email": "info@aerospace-compliance.io"
  },
  "license": "Proprietary",
  "keywords": ["aerospace", "custom-fields", "as9100", "compliance", "data-extension"],
  "tags": ["aerospace", "as9100", "nadcap", "compliance", "custom-fields"],
  "documentation": {
    "guide": "https://docs.aerospace-compliance.io/machshop-extension"
  },
  "dependencies": {
    "capabilities": [
      {
        "capability": "work-order-schema",
        "minVersion": "v2"
      },
      {
        "capability": "quality-schema",
        "minVersion": "v2"
      }
    ]
  },
  "conflicts": {
    "explicit": [
      {
        "id": "aerospace-legacy-fields",
        "reason": "Superseded by improved schema"
      }
    ]
  },
  "capabilities": {
    "provides": [
      {
        "name": "aerospace-data-extension",
        "version": "v2.0.0",
        "implements": ["getCustomFields", "validateCompliance", "trackCertification"]
      }
    ],
    "dataSchema": {
      "fields": [
        {
          "name": "work-order.certification-level",
          "type": "string",
          "required": false,
          "description": "Aerospace certification level"
        },
        {
          "name": "work-order.supplier-approval",
          "type": "string",
          "required": false,
          "description": "Supplier approval status"
        },
        {
          "name": "quality.nadcap-status",
          "type": "string",
          "required": false,
          "description": "NADCAP certification status"
        },
        {
          "name": "quality.fracture-critical-tracking",
          "type": "boolean",
          "required": false,
          "description": "Track fracture-critical items"
        }
      ]
    }
  },
  "permissions": [
    "read:work-orders",
    "write:work-orders",
    "read:quality",
    "write:quality"
  ],
  "compliance": {
    "applicableRegulations": ["AS9100", "NADCAP", "FAA-PMA"],
    "complianceModel": "enforced"
  },
  "configuration": {
    "properties": {
      "enableCertificationTracking": {
        "type": "boolean",
        "description": "Enable aerospace certification tracking",
        "default": true
      },
      "nadcapRequired": {
        "type": "boolean",
        "description": "Enforce NADCAP certification for specific operations",
        "default": true
      },
      "complianceLevel": {
        "type": "string",
        "enum": ["basic", "standard", "strict"],
        "default": "standard",
        "description": "Level of compliance enforcement"
      }
    },
    "required": ["complianceLevel"]
  },
  "requirements": {
    "nodeVersion": ">=16.0.0",
    "memory": "256MB"
  },
  "testing": {
    "hasTests": true,
    "coverage": 88,
    "testTypes": ["unit", "integration"],
    "cicdIntegration": true
  },
  "security": {
    "sandboxed": true,
    "signatureRequired": true,
    "securityLevel": "standard",
    "vulnerabilityScanRequired": true
  },
  "governance": {
    "requiresPlatformApproval": false,
    "approvalProcess": "standard"
  },
  "releaseDate": "2024-03-01T09:00:00Z"
}
