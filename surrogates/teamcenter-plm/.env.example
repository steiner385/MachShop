# Teamcenter PLM Surrogate Configuration

# Server Configuration
PORT=3002
NODE_ENV=development
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Test Data Configuration
ENABLE_TEST_DATA=true
TEST_SCENARIO=MEDIUM
# Options: SIMPLE (10 parts, 2 levels), MEDIUM (100 parts, 4 levels),
#          COMPLEX (1000 parts, 8 levels), GE9X (25000 parts, 10+ levels)

# API Configuration
API_PREFIX=/api/teamcenter
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# Swagger/OpenAPI
SWAGGER_ENABLED=true
SWAGGER_URL=/api-docs

# Database (for future phases)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teamcenter_plm
DB_USER=postgres
DB_PASSWORD=password

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Error Handling
ERROR_SCENARIOS_ENABLED=false
SIMULATE_DELAYS=false
DELAY_MIN_MS=0
DELAY_MAX_MS=100

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Authentication (for future phases)
AUTH_ENABLED=false
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
BOM_MAX_LEVELS=10
MAX_QUERY_RESULTS=1000

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
