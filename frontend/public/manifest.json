      "url": "/materials/mobile-scanning?mode=scan",
      "icons": [
        {
          "src": "/icons/scan-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Movement History",
      "short_name": "History",
      "description": "View recent material movements",
      "url": "/materials/mobile-scanning?mode=history",
      "icons": [
        {
          "src": "/icons/history-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Sync Offline Data",
      "short_name": "Sync",
      "description": "Sync offline movements to server",
