# E2E Testing Environment Configuration
NODE_ENV="test"

# Server Ports - Dynamic allocation managed by global-setup.ts
# PORT and FRONTEND_PORT are dynamically allocated per test project
# Fallback values only used if dynamic allocation fails
PORT=3101
FRONTEND_PORT=5278

# Database
DATABASE_URL="postgresql://mes_user:mes_password@localhost:5432/mes_e2e_db?schema=public"

# Application URLs
FRONTEND_URL="http://e2e.mes.com"
BACKEND_URL="http://localhost:3101"
DOMAIN="e2e.mes.com"

# JWT Configuration
JWT_SECRET="e2e-test-jwt-secret-for-testing-only"
JWT_EXPIRE="24h"
JWT_REFRESH_EXPIRE="7d"

# Redis Configuration (separate DB for E2E)
REDIS_URL="redis://localhost:6379"
REDIS_DB="1"

# Kafka Configuration (for event streaming)
KAFKA_BROKERS="localhost:9092"

# Email Configuration (for NCR workflow notifications and approvals)
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@machshop.local"

# File Upload Configuration
UPLOAD_MAX_SIZE="10MB"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf"

# Logging Configuration
LOG_LEVEL="warn"
LOG_FORMAT="json"

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET="e2e-test-session-secret-for-testing-only"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGINS="http://e2e.mes.com,http://localhost:5278,http://localhost:3101"

# E2E-specific settings
TEST_MODE=true
DISABLE_RATE_LIMITING=true
FAST_BCRYPT=true