# GE Proficy Historian Surrogate Environment Configuration
# Copy this file to .env and modify values as needed

# ===========================================
# General Environment Settings
# ===========================================
ENVIRONMENT=development
NODE_ENV=production
TZ=UTC

# ===========================================
# Surrogate Server Configuration
# ===========================================

# Server Networking
SURROGATE_PORT=8080
SURROGATE_HOST=0.0.0.0
SURROGATE_LOG_LEVEL=info

# Authentication Settings
SURROGATE_AUTH_ENABLED=true
SURROGATE_AUTH_USERNAME=historian
SURROGATE_AUTH_PASSWORD=password

# Storage Configuration
SURROGATE_MAX_DATA_POINTS=1000000
SURROGATE_RETENTION_HOURS=24
SURROGATE_COMPRESSION_ENABLED=true

# Feature Toggles
SURROGATE_ERROR_SIMULATION=false
SURROGATE_RATE_LIMIT_ENABLED=false
SURROGATE_CORS_ENABLED=true

# Data Loading Options
# SURROGATE_SCENARIO=manufacturing_line_1
SURROGATE_LOAD_MINIMAL_DATA=true

# ===========================================
# Monitoring Configuration (Optional)
# ===========================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===========================================
# Development & Testing
# ===========================================

# Custom scenarios path (for mounting custom test scenarios)
CUSTOM_SCENARIOS_PATH=./scenarios

# Load testing configuration
LOAD_TEST_DURATION=60s
LOAD_TEST_RATE=10

# ===========================================
# Production Overrides
# ===========================================
# Uncomment and modify for production deployments

# Security
# SURROGATE_AUTH_PASSWORD=your_secure_password_here
# GRAFANA_PASSWORD=your_secure_grafana_password

# Performance
# SURROGATE_MAX_DATA_POINTS=10000000
# SURROGATE_RETENTION_HOURS=168  # 7 days

# Logging
# SURROGATE_LOG_LEVEL=warn

# ===========================================
# Docker Compose Profiles
# ===========================================
# Available profiles for docker-compose:
# - default: Just the surrogate server
# - monitoring: Includes Prometheus and Grafana
# - testing: Includes load testing tools
# - logging: Includes ELK stack
#
# Usage examples:
# docker-compose up                                    # Default profile
# docker-compose --profile monitoring up              # With monitoring
# docker-compose --profile monitoring --profile testing up  # Multiple profiles