# Work Order Service Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Service Configuration
# ============================================================================
NODE_ENV=development
PORT=3009
SERVICE_NAME=work-order-service

# ============================================================================
# Database Configuration
# ============================================================================
# Work Order database connection string
WORK_ORDER_DATABASE_URL=postgresql://mes_wo_user:mes_wo_password_dev@localhost:5433/mes_work_order

# ============================================================================
# Redis Configuration
# ============================================================================
# Redis connection for caching and reference data
REDIS_URL=redis://localhost:6379

# ============================================================================
# Kafka Configuration
# ============================================================================
# Kafka brokers (comma-separated for multiple brokers)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=work-order-service
KAFKA_GROUP_ID=work-order-service-group

# ============================================================================
# CORS Configuration
# ============================================================================
# Allowed origin for CORS (frontend URL)
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ============================================================================
# Rate Limiting
# ============================================================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Logging
# ============================================================================
# Log level: error | warn | info | http | verbose | debug | silly
LOG_LEVEL=info

# ============================================================================
# Business Rules
# ============================================================================
# Maximum quantity allowed per work order
MAX_WORK_ORDER_QUANTITY=10000
# Default daily production capacity for estimation
DEFAULT_DAILY_CAPACITY=100

# ============================================================================
# Auth Service Integration
# ============================================================================
# URL of the Authentication Service for token verification
AUTH_SERVICE_URL=http://localhost:3008
