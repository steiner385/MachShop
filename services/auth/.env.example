# Authentication Service Environment Variables

# Service Configuration
NODE_ENV=development
PORT=3008
SERVICE_NAME=auth-service

# Database Connection
AUTH_DATABASE_URL=postgresql://mes_auth_user:password@localhost:5432/mes_auth

# Redis Connection (for refresh tokens and caching)
REDIS_URL=redis://localhost:6379

# Kafka Configuration (for event publishing)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=auth-service
KAFKA_GROUP_ID=auth-service-group

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=change-this-to-a-secure-random-string-min-32-chars

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
